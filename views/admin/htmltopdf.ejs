<style>
    h2 {
        text-align: center;
        font-size: 22px;
        font-weight: bold;
        font-family: cursive;
        text-transform: uppercase;
        text-decoration: underline;
        letter-spacing: 5px;
        color: black;
    }

    table {
        border-collapse: collapse;
        table-layout: fixed;
        width: 100%;
        border-spacing: 0px;
        table-layout: fixed;
        margin-left: auto;
        margin-right: auto;
        font-family: cursive;
    }

    th {
        color: #ffffff;
        background: #4FC3A1;
        border: 1px solid black;
    }

    td {
        padding: 15px;
        width: 110px;
        word-wrap: break-word;
        border: 1px solid black;
    }

    table th:nth-child(odd) {
        color: #ffffff;
        background: #324960;
    }

    table tr:nth-child(even) {
        background: #F8F8F8;
    }
</style>


<h2>
    <u> USERS LISTS </u>
</h2>

<h2> Created Date&Time :- <%= new Date().toLocaleString(); %>
</h2>




<table class="fl-table">


    <tr>
        <th>User Image</th>
        <th>User Name</th>
        <th>User Email</th>
        <th>User Mobile No</th>
        <th>User Verified</th>
    </tr>


    <% if(users.length> 0) {
        for(let i=0; i < users.length; i++) { %>
            <tr>
                <td> <img src="http://localhost:3000/userImages/<%= users[i].image %>" alt="<%= users[i].image %>"
                        height="70px" width="70px">
                </td>
                <td>
                    <%= users[i].name %>
                </td>
                <td>
                    <%= users[i].email %>
                </td>
                <td>
                    <%= users[i].mobile %>
                </td>
                <td>
                    <% if(users[i].is_varified==1) { %>
                        Verified
                        <% } %>
                </td>
            </tr>
            <% } } else { %>
                <tr>
                    <td colspan="5">User Not Found</td>
                </tr>
                <% } %>


</table>