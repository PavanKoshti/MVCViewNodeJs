<style>
    h2 {
        text-align: center;
        font-size: 22px;
        font-weight: bold;
        font-family: cursive;
        text-transform: uppercase;
        text-decoration: underline;
        letter-spacing: 5px;
        color: black;
    }

    .table-wrapper {
        margin: 10px 70px 70px;
        box-shadow: 0px 35px 50px rgba(0, 0, 0, 0.2);
    }

    .fl-table {
        border-radius: 5px;
        font-size: 12px;
        font-weight: normal;
        border: none;
        border-collapse: collapse;
        width: 100%;
        max-width: 100%;
        white-space: nowrap;
        background-color: white;
    }

    .fl-table td,
    .fl-table th {
        text-align: center;
        padding: 8px;
    }

    .fl-table td {
        border-right: 1px solid #f8f8f8;
        font-size: 12px;
    }

    .fl-table thead th {
        color: #ffffff;
        background: #4FC3A1;
    }

    .fl-table thead th:nth-child(odd) {
        color: #ffffff;
        background: #324960;
    }

    .fl-table tr:nth-child(even) {
        background: #F8F8F8;
    }
</style>


<h2>
    <u> USERS LISTS </u>
</h2>

<h2> Created Date&Time :- <%= new Date().toLocaleString(); %>
</h2>


<div class="table-wrapper">

    <table class="fl-table">

        <thead>
            <tr>
                <th>User Image</th>
                <th>User Name</th>
                <th>User Email</th>
                <th>User Mobile No</th>
                <th>User Verified</th>
            </tr>
        </thead>
        <tbody>
            <% if(users.length> 0) {
                for(let i=0; i < users.length; i++) { %>
                    <tr>
                        <td> <img src="http://localhost:3000/userImages/<%= users[i].image %>"
                                alt="<%= users[i].image %>" height="70px" width="70px">
                        </td>
                        <td>
                            <%= users[i].name %>
                        </td>
                        <td>
                            <%= users[i].email %>
                        </td>
                        <td>
                            <%= users[i].mobile %>
                        </td>
                        <td>
                            <% if(users[i].is_varified==1) { %>
                                Verified
                                <% } %>
                        </td>
                    </tr>
                    <% } } else { %>
                        <tr>
                            <td colspan="5">User Not Found</td>
                        </tr>
                        <% } %>
        </tbody>

    </table>

</div>