<% include('../layouts/header.ejs') %>

    <h1>Welcome, <span style="color: red;">
            <%= user.name %>
        </span> For Edit Profile.</h1>

    <img src="userImages/<%= user.image %>" alt="<%= user.image %>" height="100px" width="100px">
    <br><br>
    <form action="" method="post" enctype="multipart/form-data">
        <input type="text" name="name" value="<%= user.name %>" placeholder="Enter Name" required>
        <br><br>
        <input type="email" name="email" value="<%= user.email %>" placeholder="Enter Email" required>
        <br><br>
        <input type="text" name="mobile" value="<%= user.mobile %>" placeholder="Enter Mobile" minlength="10"
            maxlength="10" required>
        <br><br>
        <input type="file" name="image">
        <input type="hidden" name="oldimage" value="<%= user.image %>">
        <br><br><br>
        <input type="submit" value="Update Profile">
    </form>

    <% if(typeof message !=='undefined' ) { %>
        <p style="color: green;">
            <%= message %>
        </p>
        <% } %>

            <% include('../layouts/footer.ejs') %>